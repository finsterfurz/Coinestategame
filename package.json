{
  "name": "virtual-building-empire",
  "version": "2.0.0",
  "description": "Virtual Building Empire - Modern Web3 Gaming Platform with NFT Characters and LUNC Rewards",
  "keywords": [
    "gaming",
    "nft",
    "characters",
    "virtual-building",
    "lunc",
    "blockchain-game",
    "web3",
    "entertainment",
    "react",
    "ethereum",
    "polygon",
    "defi"
  ],
  "main": "index.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "npm start",
    "preview": "npm run build && serve -s build",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:goerli": "hardhat run scripts/deploy.js --network goerli",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "deploy:mumbai": "hardhat run scripts/deploy.js --network mumbai",
    "deploy:bsc": "hardhat run scripts/deploy.js --network bsc",
    "test:contracts": "hardhat test",
    "coverage": "hardhat coverage",
    "node": "hardhat node",
    "verify": "hardhat verify",
    "gas-report": "REPORT_GAS=true hardhat test",
    "clean": "hardhat clean && rm -rf build",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "size": "npm run build && bundlesize",
    "security": "npm audit && npm run lint",
    "precommit": "npm run lint && npm run format:check && npm run test -- --watchAll=false",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir=build",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/finsterfurz/Coinestategame.git"
  },
  "author": {
    "name": "finsterfurz",
    "email": "info@virtualbuilding.game",
    "url": "https://virtualbuilding.game"
  },
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "react-router-dom": "^6.8.0",
    "ethers": "^5.7.2",
    "web3": "^4.0.0",
    "styled-components": "^5.3.0",
    "lucide-react": "^0.263.1",
    "framer-motion": "^10.0.0",
    "recharts": "^2.5.0",
    "react-hot-toast": "^2.4.0",
    "react-query": "^3.39.0",
    "lodash": "^4.17.21",
    "date-fns": "^2.29.0",
    "react-spring": "^9.6.1",
    "use-sound": "^4.0.1",
    "axios": "^1.3.0",
    "clsx": "^1.2.1",
    "react-helmet": "^6.1.0",
    "react-error-boundary": "^4.0.0",
    "react-intersection-observer": "^9.4.0",
    "react-lazyload": "^3.2.0",
    "uuid": "^9.0.0",
    "js-cookie": "^3.0.1",
    "country-flag-icons": "^1.5.0",
    "react-icons": "^4.7.0",
    "react-confetti": "^6.1.0",
    "react-toastify": "^9.1.0",
    "web3-utils": "^4.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/lodash": "^4.14.0",
    "@types/uuid": "^9.0.0",
    "@types/js-cookie": "^3.0.0",
    "typescript": "^4.9.0",
    "hardhat": "^2.14.0",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^4.9.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.0",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@openzeppelin/hardhat-upgrades": "^1.22.0",
    "chai": "^4.3.7",
    "ethereum-waffle": "^4.0.10",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-contract-sizer": "^2.8.0",
    "solidity-coverage": "^0.8.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.36.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-config-prettier": "^8.7.0",
    "prettier": "^2.8.7",
    "webpack-bundle-analyzer": "^4.8.0",
    "bundlesize": "^0.18.0",
    "serve": "^14.2.0",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.0",
    "@testing-library/user-event": "^14.4.0",
    "cypress": "^12.7.0",
    "start-server-and-test": "^2.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "homepage": "https://coinestategame.vercel.app",
  "bugs": {
    "url": "https://github.com/finsterfurz/Coinestategame/issues"
  },
  "bundlesize": [
    {
      "path": "./build/static/js/*.js",
      "maxSize": "1 MB"
    },
    {
      "path": "./build/static/css/*.css",
      "maxSize": "300 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "src/**/*.{css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "proxy": "http://localhost:3001",
  "private": false
}
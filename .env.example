# ===================================
# üè¢ VIRTUAL BUILDING EMPIRE - ENV CONFIGURATION
# ===================================

# Basic App Configuration
REACT_APP_NAME="Virtual Building Empire"
REACT_APP_VERSION="1.0.0"
REACT_APP_DESCRIPTION="Character Collection Game with LUNC Rewards"

# Environment
NODE_ENV=development
REACT_APP_ENV=development

# API Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_WEBSOCKET_URL=ws://localhost:3001

# Web3 Configuration
REACT_APP_ENABLE_WEB3=true
REACT_APP_DEFAULT_CHAIN_ID=1
REACT_APP_SUPPORTED_CHAINS=1,5,137,80001

# Smart Contract Addresses (Update after deployment)
REACT_APP_CHARACTER_CONTRACT_ADDRESS=
REACT_APP_LUNC_TOKEN_ADDRESS=
REACT_APP_MARKETPLACE_CONTRACT_ADDRESS=
REACT_APP_BUILDING_CONTRACT_ADDRESS=

# Blockchain Network URLs
REACT_APP_ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
REACT_APP_GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY
REACT_APP_POLYGON_RPC_URL=https://polygon-rpc.com
REACT_APP_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# IPFS Configuration
REACT_APP_IPFS_GATEWAY=https://ipfs.io/ipfs/
REACT_APP_PINATA_API_KEY=
REACT_APP_PINATA_SECRET_KEY=

# Game Configuration
REACT_APP_MAX_FAMILY_SIZE=50
REACT_APP_BUILDING_FLOORS=25
REACT_APP_DAILY_LUNC_HOUR=12
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_SOUND=true

# LUNC Token Configuration
REACT_APP_LUNC_DECIMALS=6
REACT_APP_LUNC_SYMBOL=LUNC
REACT_APP_INITIAL_LUNC_BALANCE=1000

# Minting Configuration
REACT_APP_MINT_COST_COMMON=100
REACT_APP_MINT_COST_RARE=300
REACT_APP_MINT_COST_LEGENDARY=1000

# Marketplace Configuration
REACT_APP_MARKETPLACE_FEE=0.025
REACT_APP_MIN_LISTING_PRICE=50
REACT_APP_MAX_LISTING_PRICE=10000

# Analytics & Monitoring
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=
REACT_APP_MIXPANEL_TOKEN=

# External Services
REACT_APP_DISCORD_WEBHOOK=
REACT_APP_TELEGRAM_BOT_TOKEN=
REACT_APP_TELEGRAM_CHAT_ID=

# Development Tools
REACT_APP_DEBUG_MODE=true
REACT_APP_SHOW_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_MOCK_DATA=true

# Security
REACT_APP_ENABLE_CSP=true
REACT_APP_ALLOWED_HOSTS=localhost,127.0.0.1,*.vercel.app

# Performance
REACT_APP_ENABLE_SW=true
REACT_APP_ENABLE_COMPRESSION=true
REACT_APP_CHUNK_SIZE_WARNING_LIMIT=1000000

# Backup & Recovery
REACT_APP_BACKUP_INTERVAL=3600000
REACT_APP_MAX_BACKUP_COUNT=10


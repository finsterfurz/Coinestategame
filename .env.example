# ===================================
# üîß VIRTUAL BUILDING EMPIRE - ENVIRONMENT CONFIGURATION
# ===================================
# Copy this file to .env and update with your values

# ===================================
# üåê BLOCKCHAIN CONFIGURATION
# ===================================

# Main network configuration
REACT_APP_CHAIN_ID=1
REACT_APP_NETWORK_NAME=mainnet

# RPC URLs for different networks
REACT_APP_MAINNET_RPC=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
REACT_APP_GOERLI_RPC=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID
REACT_APP_POLYGON_RPC=https://polygon-rpc.com
REACT_APP_BSC_RPC=https://bsc-dataseed.binance.org

# ===================================
# üìú SMART CONTRACT ADDRESSES
# ===================================

# Character NFT Contract
REACT_APP_CHARACTER_CONTRACT=0x0000000000000000000000000000000000000000

# Marketplace Contract
REACT_APP_MARKETPLACE_CONTRACT=0x0000000000000000000000000000000000000000

# LUNC Token Contract
REACT_APP_LUNC_TOKEN_CONTRACT=0x0000000000000000000000000000000000000000

# Building Management Contract
REACT_APP_BUILDING_CONTRACT=0x0000000000000000000000000000000000000000

# Job Assignment Contract
REACT_APP_JOB_CONTRACT=0x0000000000000000000000000000000000000000

# ===================================
# üîë API CONFIGURATION
# ===================================

# Backend API URL
REACT_APP_API_URL=https://api.virtualbuilding.game

# IPFS Gateway for NFT metadata
REACT_APP_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs

# Alternative IPFS gateways
REACT_APP_IPFS_GATEWAY_BACKUP=https://cloudflare-ipfs.com/ipfs

# ===================================
# üéÆ GAME CONFIGURATION
# ===================================

# Demo mode (shows demo data)
REACT_APP_DEMO_MODE=true

# Debug mode (shows debug panel)
REACT_APP_DEBUG_MODE=false

# Game version
REACT_APP_VERSION=1.0.0

# Maximum characters per family
REACT_APP_MAX_FAMILY_SIZE=25

# LUNC collection interval (milliseconds)
REACT_APP_LUNC_COLLECTION_INTERVAL=60000

# ===================================
# üí∞ MARKETPLACE CONFIGURATION
# ===================================

# Marketplace fee percentage
REACT_APP_MARKETPLACE_FEE=2.5

# Minimum listing price (ETH)
REACT_APP_MIN_LISTING_PRICE=0.01

# Maximum listing price (ETH)
REACT_APP_MAX_LISTING_PRICE=100

# ===================================
# üéØ MINTING CONFIGURATION
# ===================================

# Character mint price (ETH)
REACT_APP_MINT_PRICE=0.05

# Maximum mint per transaction
REACT_APP_MAX_MINT_PER_TX=10

# Total character supply
REACT_APP_TOTAL_SUPPLY=10000

# ===================================
# üè¢ BUILDING CONFIGURATION
# ===================================

# Total building floors
REACT_APP_BUILDING_FLOORS=25

# Jobs per floor
REACT_APP_JOBS_PER_FLOOR=100

# Daily LUNC pool
REACT_APP_DAILY_LUNC_POOL=25000

# ===================================
# üîí SECURITY CONFIGURATION
# ===================================

# Enable HTTPS enforcement
HTTPS=true

# Security headers
REACT_APP_ENABLE_SECURITY_HEADERS=true

# Rate limiting
REACT_APP_RATE_LIMIT_REQUESTS=100
REACT_APP_RATE_LIMIT_WINDOW=900000

# ===================================
# üìä ANALYTICS CONFIGURATION
# ===================================

# Google Analytics ID
REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# Mixpanel token
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token

# Enable analytics
REACT_APP_ENABLE_ANALYTICS=false

# ===================================
# üåç INTERNATIONALIZATION
# ===================================

# Default language
REACT_APP_DEFAULT_LANGUAGE=de

# Available languages
REACT_APP_AVAILABLE_LANGUAGES=de,en,es,fr,zh

# ===================================
# üì± PWA CONFIGURATION
# ===================================

# PWA app name
REACT_APP_PWA_NAME=Virtual Building Empire

# PWA short name
REACT_APP_PWA_SHORT_NAME=VBE

# PWA theme color
REACT_APP_PWA_THEME_COLOR=#667eea

# ===================================
# üîß DEVELOPMENT CONFIGURATION
# ===================================

# Show webpack bundle analyzer
ANALYZE=false

# Generate source maps
GENERATE_SOURCEMAP=true

# Disable ESLint warnings in build
ESLINT_NO_DEV_ERRORS=false

# ===================================
# üåê DEPLOYMENT CONFIGURATION
# ===================================

# Public URL (for production)
PUBLIC_URL=https://virtualbuilding.game

# Build path
BUILD_PATH=build

# Homepage URL
HOMEPAGE=https://virtualbuilding.game

# ===================================
# üìß NOTIFICATION CONFIGURATION
# ===================================

# Email service API key
REACT_APP_EMAIL_API_KEY=your_email_api_key

# Push notification service
REACT_APP_PUSH_NOTIFICATION_KEY=your_push_key

# Discord webhook for notifications
REACT_APP_DISCORD_WEBHOOK=https://discord.com/api/webhooks/...

# ===================================
# üé® THEME CONFIGURATION
# ===================================

# Custom theme colors
REACT_APP_PRIMARY_COLOR=#667eea
REACT_APP_SECONDARY_COLOR=#764ba2
REACT_APP_ACCENT_COLOR=#ffc107

# Dark mode support
REACT_APP_ENABLE_DARK_MODE=false

# ===================================
# üìÑ LEGAL CONFIGURATION
# ===================================

# Company information
REACT_APP_COMPANY_NAME=Virtual Building Empire LLC
REACT_APP_COMPANY_COUNTRY=UAE
REACT_APP_COMPANY_CITY=Dubai

# Legal disclaimers
REACT_APP_SHOW_LEGAL_DISCLAIMER=true
REACT_APP_TERMS_URL=https://virtualbuilding.game/terms
REACT_APP_PRIVACY_URL=https://virtualbuilding.game/privacy

# ===================================
# üîÑ FEATURE FLAGS
# ===================================

# Enable experimental features
REACT_APP_ENABLE_EXPERIMENTAL=false

# Enable beta features
REACT_APP_ENABLE_BETA=false

# Enable A/B testing
REACT_APP_ENABLE_AB_TESTING=false

# ===================================
# üìà PERFORMANCE CONFIGURATION
# ===================================

# Enable performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# Performance budget (KB)
REACT_APP_PERFORMANCE_BUDGET=500

# Enable lazy loading
REACT_APP_ENABLE_LAZY_LOADING=true
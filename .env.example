# ðŸŽ® Virtual Building Empire - Environment Configuration
# Copy this file to .env and fill in your values

# ========================================
# BLOCKCHAIN CONFIGURATION
# ========================================

# Private key for contract deployment (DO NOT COMMIT THIS)
PRIVATE_KEY=your_private_key_here

# RPC URLs for different networks
MAINNET_RPC_URL=https://mainnet.infura.io/v3/your_project_id
GOERLI_RPC_URL=https://goerli.infura.io/v3/your_project_id
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your_project_id
MUMBAI_RPC_URL=https://polygon-mumbai.infura.io/v3/your_project_id
BSC_RPC_URL=https://bsc-dataseed1.binance.org/
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# ========================================
# BLOCK EXPLORER API KEYS
# ========================================

# For contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
BSCSCAN_API_KEY=your_bscscan_api_key

# ========================================
# TOKEN ADDRESSES
# ========================================

# LUNC Token address (update based on your network)
LUNC_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000

# ========================================
# GAME CONFIGURATION
# ========================================

# Character mint price (in ETH)
CHARACTER_MINT_PRICE=0.05

# Daily LUNC reward pool
DAILY_LUNC_POOL=25000

# Building efficiency (0-100)
INITIAL_BUILDING_EFFICIENCY=80

# ========================================
# FRONTEND CONFIGURATION
# ========================================

# API Base URL for metadata and backend
REACT_APP_API_BASE_URL=https://api.virtualbuilding.game

# MetaMask connection settings
REACT_APP_WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id

# Environment (development, staging, production)
REACT_APP_ENVIRONMENT=development

# ========================================
# DEPLOYMENT SETTINGS
# ========================================

# Network to deploy to (mainnet, goerli, polygon, mumbai, bsc, bscTestnet)
DEPLOY_NETWORK=goerli

# Number of confirmations to wait
DEPLOY_CONFIRMATIONS=2

# Gas settings
DEPLOY_GAS_PRICE=20000000000
DEPLOY_GAS_LIMIT=8000000

# ========================================
# MONITORING & ANALYTICS
# ========================================

# Gas reporting
REPORT_GAS=true

# Sentry for error tracking (optional)
REACT_APP_SENTRY_DSN=your_sentry_dsn

# Google Analytics (optional)
REACT_APP_GA_TRACKING_ID=your_ga_tracking_id

# ========================================
# LEGAL & COMPLIANCE
# ========================================

# Company information
COMPANY_NAME=Virtual Building Empire LLC
COMPANY_JURISDICTION=Dubai, UAE
COMPANY_REGISTRATION=your_registration_number

# Legal disclaimers
GAMING_ONLY=true
NO_INVESTMENT_ADVICE=true
ENTERTAINMENT_PURPOSE=true

# ========================================
# SECURITY SETTINGS
# ========================================

# Rate limiting
RATE_LIMIT_MINT=10  # Max mints per hour per address
RATE_LIMIT_CLAIM=1  # Max claims per day per address

# Emergency controls
EMERGENCY_PAUSE=false
MAINTENANCE_MODE=false

# ========================================
# DEVELOPMENT SETTINGS
# ========================================

# Debug logging
DEBUG=true
LOG_LEVEL=info

# Test settings
TEST_TIMEOUT=40000
TEST_ACCOUNTS=20

# Mock data for development
USE_MOCK_DATA=false
MOCK_WALLET_ADDRESS=0x0000000000000000000000000000000000000000
# Virtual Building Empire - Environment Variables Example
# Copy this file to .env and fill in your values

# Application
REACT_APP_NAME=Virtual Building Empire
REACT_APP_VERSION=2.0.0
REACT_APP_DESCRIPTION=NFT Character Collection Game with LUNC Rewards

# API Endpoints (when implemented)
REACT_APP_API_BASE_URL=https://api.virtualbuilding.game
REACT_APP_MARKETPLACE_API=https://marketplace-api.virtualbuilding.game

# Blockchain Configuration
REACT_APP_NETWORK_ID=1
REACT_APP_NETWORK_NAME=mainnet
REACT_APP_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Contract Addresses (when deployed)
REACT_APP_CHARACTER_CONTRACT=0x...
REACT_APP_LUNC_TOKEN_CONTRACT=0x...
REACT_APP_MARKETPLACE_CONTRACT=0x...

# Feature Flags
REACT_APP_ENABLE_WEB3=true
REACT_APP_ENABLE_MARKETPLACE=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANALYTICS=false

# Development
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_WALLET=false
REACT_APP_SKIP_PREFLIGHT_CHECK=true

# External Services
REACT_APP_INFURA_PROJECT_ID=your_infura_project_id
REACT_APP_ALCHEMY_API_KEY=your_alchemy_api_key
REACT_APP_MORALIS_APP_ID=your_moralis_app_id
REACT_APP_MORALIS_SERVER_URL=your_moralis_server_url

# Analytics (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token

# Social Media
REACT_APP_DISCORD_INVITE=https://discord.gg/virtualbuilding
REACT_APP_TWITTER_URL=https://twitter.com/virtualbuilding
REACT_APP_GITHUB_URL=https://github.com/finsterfurz/Coinestategame

# Game Configuration
REACT_APP_MAX_CHARACTERS_PER_FAMILY=50
REACT_APP_DAILY_MINT_LIMIT=10
REACT_APP_BUILDING_FLOORS=25
REACT_APP_BASE_LUNC_REWARD=50

# Development Only
GENERATE_SOURCEMAP=false
TSC_COMPILE_ON_ERROR=true
ESLINT_NO_DEV_ERRORS=true